<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml" prefHeight="500" prefWidth="350"
           fx:controller="javafx_17.animation.slide.RootController">
    <children>
        <BorderPane>
            <top>
                <BorderPane style="-fx-background-color: #eaeaea;">
                    <center>
                        <Label alignment="CENTER" prefWidth="215" text="메인 화면" />
                    </center>

                    <right>
                        <Button fx:id="buttonLogin" text="로그인" />
                    </right>
                    <padding>
                        <Insets topRightBottomLeft="10.0" />
                    </padding>
                </BorderPane>
            </top>

            <center>
                <VBox style="-fx-background-color: #0000ff;">
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>